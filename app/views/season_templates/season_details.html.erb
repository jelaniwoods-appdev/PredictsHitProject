<div id="season_container">
  <div class="row">   
    <div class="col-xs-12 col-md-10 offset-md-1">
      <h1 class="center_title"><%= @season_row.title %></h1>
      <div class="center_title"><%= @season_row.description %></div>
      <br>
      <div class="center_title">
        <img src="<%= @season_row.picture %>" height="180" width="240" class="img-responsive">
      </div>
      <br>
      <h2>Current Markets</h2>
      <br>
      <% if @current_market_rows.present? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        <% @current_market_rows.each do |market| %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="<%= market.picture %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= market.title %></h5>
                <% if market.description == "" %>
                  <p class="card-text text-truncate">[No Description]</p>
                <% else %>
                  <p class="card-text text-truncate"><%= market.description %> </p>
                <% end %>
                <div class="text-center"><a class="btn btn-secondary stretched-link" href="/markets/<%= market.season.club.id.to_s + '/' + market.season.id.to_s + '/' + market.id.to_s %>">Go to Market</a></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <br>

      <% else %>
      <h3>
        There are no markets currently available in <%= @season_row.title %>.
      </h3>
        <br>
      <% end %>
    
    <br>
    <% if @closed_market_rows.present? %>
      <h2>Previous Markets</h2>
      <br>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        <% @closed_market_rows.each do |market| %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="<%= market.picture %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= market.title %></h5>
                <% if market.description == "" %>
                  <p class="card-text text-truncate">[No Description]</p>
                <% else %>
                  <p class="card-text text-truncate"><%= market.description %> </p>
                <% end %>
                <div class="text-center"><a class="btn btn-secondary stretched-link" href="/markets/<%= market.season.club.id.to_s + '/' + market.season.id.to_s + '/' + market.id.to_s %>">Go to Market</a></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <br>
      <% end %>
    </div>
  </div>
</div>


<%= render 'season_templates/season_chat' %>
<%= render 'season_templates/season_standings' %>


<!-- Only render season modals if not closed -->
<% if @season_row.status != "closed" %> 
  <%= render 'season_templates/season_modals' %>
<% end %>

<script>
$(document).ready(function() {

 $('#season_standings').show();

  $('#standings-toggle').click(function() {
   $('#season_standings').toggle();

   });
 });
</script>

<script>
$(document).ready(function() {

 $('#sidebar_right').show();

  $('#sidebar_rightCollapse').click(function() {
   $('#sidebar_right').toggle();

   });
 });
</script>