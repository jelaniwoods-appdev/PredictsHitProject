<div class="row">   
  <div class="col-1 position-fixed" style="min-width: 150px;">
    <div class="center_title"><a class="btn btn-outline-secondary btn-block" id="return" href="/markets/<%= @club_row.id %>/<%= @season_row.id %>/<%= @market_row.id %>">Return to Market</a></div>
    <br>
    <% if @owner_user_id == current_user.id %>
      <button type="button" class="btn btn-outline-secondary btn-block" data-toggle="modal" data-target="#manage_contract_details">
          Edit Contract Details
      </button>
    <% end %>
  </div>

  <div class="col-6 offset-3">
    <h1 class="center_title"><%= @contract_row.title %></h1>
    <br>
    <div class="center_title">
      <%= @contract_row.description %>
    </div>
    <br>
    <div class="center_title">
      <img src="<%= @contract_row.contractpic %>" height = 200 class="img-responsive">
    </div>
  </div>
</div>

<br>
<div class="row">
  <div class="col-6 offset-3">
    <h2 class="center_title">Current Yes Price</h2>
    <div class="center_title">
      <%= number_to_currency(@contract_row.price_check(@contract_row.id, 50, 1, "yes")) %>
    </div>
    <br>
    <h2 class="center_title">Current No Price</h2>
    <div class="center_title">
      <%= number_to_currency(@contract_row.price_check(@contract_row.id, 50, 1, "no")) %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-6 offset-3">
    <h2 class="center_title">Current Ownership</h2>
      <table class="table table-hover table-striped sortable table-bordered">
        <thead class="thead-dark">
          <tr class="d-flex">
            <th class="col-4 text-center pr-5" >
              Username
            </th>

            <th class="col-4 text-center pr-5">
              Yes Contracts
            </th>

            <th class="col-4 text-center pr-5">
              No Contracts
            </th>

          </tr>
        </thead>

        <% @membership_rows.each do |member| %>
        <tr class="d-flex">
          <td class="col-4 text-center pr-5">
            <a href="/profile/<%= member.users_id %>"><%= member.user.username %></a> 
          </td>
          <td class="col-4 text-center pr-5">
            <% if member.assets.where({ :contract_id => @contract_row.id, :category => "contract_quantity_a"}).at(0)  == nil %>
              <%= 0 %>
            <% else %>
              <%= member.assets.where({ :contract_id => @contract_row.id, :category => "contract_quantity_a"}).at(0).quantity.to_i %>
            <% end %>
          </td>
          <td class="col-4 text-center pr-5">
            <% if member.assets.where({ :contract_id => @contract_row.id, :category => "contract_quantity_b"}).at(0)  == nil %>
              <%= 0 %>
            <% else %>
              <%= member.assets.where({ :contract_id => @contract_row.id, :category => "contract_quantity_b"}).at(0).quantity.to_i %>
            <% end %>
          </td>
        </tr>
                    
        <% end %>
      </table>
  </div>
</div>

<%= render 'contract_templates/contract_modals' %>