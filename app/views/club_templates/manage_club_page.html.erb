<div class="row">
  <div class="col-1">
    <div class="center_title"><button class="btn btn-outline-secondary btn-block" id="menu-toggle">View Roster</button></div>
    <br>
    <% if @owner_user_id == current_user.id %>
        <div class="center_title"><a class="btn btn-outline-secondary btn-block" href="/clubs/<%= @club_row.id %>">View Club</a></div>
      <br>
    <% end %>
  </div>
  <div>
    <div class="d-flex" id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <h2 class="center_title">Club Roster</h2>
        <table class="table table-hover table-striped sortable table-bordered">
          <thead class="thead-dark">
            <tr class="d-flex">
              <th class="col-6 pr-5" >
                Username
              </th>

              <th class="col-6 pr-5">
                Role
              </th>

            </tr>
          </thead>

          <% @membership_rows.each do |member| %>
          <tr class="d-flex">
            <td class="col-6 pr-5">
              <a href="/profile/<%= member.users_id %>"><%= member.user.username %></a> 
            </td>
            <td class="col-6 pr-5">
              <%= member.category %>
            </td>
          </tr>
                    
          <% end %>
        </table>
      </div>
      <!-- /#sidebar-wrapper -->

    </div>
    <!-- /#wrapper -->
  </div>


  <div class="col-6 offset-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/my_clubs">My Clubs</a></li>
        <li class="breadcrumb-item"><a href="/clubs/<%= @club_row.id %>"><%= @club_row.title %></a></li>
        <li class="breadcrumb-item active" aria-current="page">Manage Club</li>
      </ol>
    </nav>

    <div class="col-md-6 offset-md-3">
        <h1 class="center_title">Manage Club</h1>
    </div>

    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">
        <h2 class="center_title">Club Details</h2>
          <br>
          <form action="/update_club_details/<%= @club_row.id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <input type="hidden" name="_method" value="patch">
              <label for="update_club_title">What is the new title of your club?</label>
              <input class="form-control" id="update_club_title" type="text" name="updated_club_title" placeholder="Enter a title..." value="<%= @club_row.title %>" required="required">
              <br>
              <label for="update_club_description">What is the new description of your club?</label>
              <input class="form-control" id="update_club_description" type="text" name="updated_club_description" placeholder="Enter a description..." value="<%= @club_row.description %>">
              <br>
              <label for="update_club_picture">What picture would you like to set for your Club?</label>
              <input type="file" id="update_club_picture" name="updated_club_picture" class="form-control">
              <br>
              <br>
              <button class="btn btn-secondary btn-block">Update Club Details</button>
            </div>
          </form>
      </div>
    </div>
    <br>
    <div class="col-md-6 offset-md-3">
      <div class="jumbotron">
        <h2 class="center_title">Add Club Member</h2>
        <br>
          <form action="/add_club_memberships/<%= @club_row.id %>" method="post">
            <div class="form-group">
              <!-- Update to involve search -->
              <label for="Add_member_username">What is the username of the member you would like to add?</label>
              <input class="form-control" id="add_member_username" type="text" name="username" placeholder="Enter a username...">
              <br>
              <select class="form-control" required="required" id="select_member_category" name="member_category"><option value="">Select role for new Club member</option>
                <option value="member">Member</option>
                <option value="admin">Admin</option>
              </select>
              <br>
              <br>
              <button class="btn btn-secondary btn-block">Add Member</button>
            </div>
          </form>
      </div>
    </div>
  </div>
</div>

<script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
</script>
