<nav id="sidebar_right">
  <div id="messages">
    <div class="row pt-5">
      <div class="col-10 offset-1 comment-card" style="height: 75vh">
        <div class="container">
          <h3 class="center_title">Club Chat</h3>
        </div>
        <div class="container scrolly comment-box" style="height: calc(75vh - 200px)">
          <% @club_messages.each do |message| %>
            <div>
              <div class="float-left image pr-3">
                <img src="<%= User.where({ :id => message.users_id }).at(0).prof_pic %>" class="img-circle avatar" alt="user profile image">
              </div>
              <div class="comment-text">
                <b><%= User.where({ :id => message.users_id }).at(0).username %></b>
                <%= message.body %>
              </div>
              <br>
            </div>
          <% end %>
        </div>
        <div class="container" style="height: 200px">
          <form action="/messages/club/create/<%= @club_row.id %>/<%= current_user.id %>" method="post" data-remote="true">
            <div class="form-group">
              <label for="comment_body"></label>
              <textarea class="form-control" id="comment_body" name="body" placeholder="Have something on your mind?" rows="1" maxlength="300" required></textarea>
              <br>
              <button class="btn btn-secondary">Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


</nav>

