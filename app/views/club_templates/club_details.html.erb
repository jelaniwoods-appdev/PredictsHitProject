<div class="row">
  <div class="col-xs-12 col-md-10 offset-md-1 col-xl-6 offset-xl-3">
    <h1 class="center_title"><%= @club_row.title %></h1>
    <div class="center_title">
      <%= @club_row.description %>
    </div>
    <br>
    <div class="center_title">
      <img src="<%= @club_row.picture %>" height="180" width="240" class="img-responsive">
    </div>
    <br>
    <h2>Current Seasons</h2>
      <br>
    <% if @current_season_rows.present? %>
      <div class="row row-cols-1 row-cols-md-3">
        <% @current_season_rows.each do |season| %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="<%= season.picture %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= season.title %></h5>
                <% if season.description == "" %>
                  <p class="card-text text-truncate">[No Description]</p>
                <% else %>
                  <p class="card-text text-truncate"><%= season.description %> </p>
                <% end %>
                <div class="text-center"><a class="btn btn-secondary stretched-link" href="/seasons/<%= season.club.id.to_s + '/' + season.id.to_s %>">Go to Season</a></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h3>
      There are no seasons currently available in <%= @club_row.title %>.
      <br>
      </h3>
    <% end %>
    <br>
    <% if @closed_season_rows.present? %>
      <h2>Previous Seasons</h2>
      <br>
      <div class="row row-cols-1 row-cols-md-4">
        <% @closed_season_rows.each do |season| %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="<%= season.picture %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= season.title %></h5>
                <% if season.description == "" %>
                  <p class="card-text text-truncate">[No Description]</p>
                <% else %>
                  <p class="card-text text-truncate"><%= season.description %> </p>
                <% end %>
                <div class="text-center"><a class="btn btn-secondary stretched-link" href="/seasons/<%= season.club.id.to_s + '/' + season.id.to_s %>">Go to Season</a></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <div class="col-1">
  </div>
  <div id="club_roster">
    <div class="col-12 position-fixed h-75 d-flex">
      <div class="sidebar-right scrolly">
        <div class="sidebar">
          <div>
            <%= render 'club_templates/club_roster' %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-xs-12 col-md-10 offset-md-1 col-xl-6 offset-xl-3">
    <div class="jumbotron">
      <div class="container">
        <h1>Club Discussion Board</h1>
        <p>
          <form action="/comments/club/create/<%= @club_row.id %>/<%= current_user.id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="comment_body"></label>
              <textarea class="form-control" id="comment_body" name="body" placeholder="Have something on your mind?" rows="4"></textarea>
              <br>
              <button class="btn btn-secondary">Submit Comment</button>
            </div>
          </form>
        </p>
      </div>
      <div class="container">
        <%= comments_tree_for @club_comments %>
      </div>
    </div>
  </div>
</div>

<%= render 'club_templates/club_modals' %>

<script>
$(document).ready(function() {

 $('#club_roster').show();

  $('#roster-toggle').click(function() {
   $('#club_roster').toggle();

   });
 });
</script>

<script>
  var users = new Bloodhound({
    datumTokenizer: Bloodhound.tokenizers.whitespace,
    queryTokenizer: Bloodhound.tokenizers.whitespace,
    remote: {
      url: '/users/autocomplete?query=%QUERY',
      wildcard: '%QUERY'
    }
  });
  $('#query').typeahead(null, {
    source: users
  });
</script>